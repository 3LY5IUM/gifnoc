# Enhanced email highlighting
color body          bold  color135  color234        "((@(([0-9a-z-]+\\.)*[0-9a-z-]+\\.?|#[0-9]+|\\[[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\]),)*@(([0-9a-z-]+\\.)*[0-9a-z-]+\\.?|#[0-9]+|\\[[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\]):)?[0-9a-z_.+%$-]+@(([0-9a-z-]+\\.)*[0-9a-z-]+\\.?|#[0-9]+|\\[[0-2]?[0-9]?[0-9]\\.[0-2]?[0-9]?[0-9]\\.[0-2]?[0-9]?[0-9]\\.[0-2]?[0-9]?[0-9]\\])"

# Enhanced futuristic highlighting patterns
color body          bold  color183  color234        "\\*[^*]+\\*"        # *bold* text in bright purple
color body          bold  color146  color234        "_[^_]+_"            # _underlined_ text in light purple
color body          bold  color135  color234        "/[^/]+/"            # /italic/ text in neon purple
color body                color241  color234        "^>[[:space:]]*$"    # empty quote lines
color body          bold  color99   color234        "TODO|FIXME|NOTE|BUG|HACK" # keywords in cyber purple
color body          bold  color183  color234        "URGENT|IMPORTANT|CRITICAL" # priority keywords
color body          bold  color135  color234        "\\b[A-Z]{2,}\\b"    # ACRONYMS in neon purple

# Enhanced sidebar colors (if sidebar is enabled) with futuristic theme
color sidebar_indicator   color234  color146                        # sidebar indicator with light purple bg
color sidebar_highlight   color183  color238                        # sidebar highlight in bright purple
color sidebar_spoolfile   color135  color234                        # spoolfile in neon purple
color sidebar_new         color183  color234                        # new mail in bright purple
color sidebar_ordinary    color250  color234                        # ordinary folders
color sidebar_flagged     color135  color234                        # flagged folders in neon purple
color sidebar_divider     color146  color234                        # divider in light purple

# Enhanced compose colors (if available) with futuristic accents
color compose header            color146  color235               # compose headers in light purple
color compose security_encrypt  color183  color235               # encryption status in bright purple
color compose security_sign     color135  color235               # signing status in neon purple
color compose security_both     color99   color235               # both security in cyber purple
color compose security_none     color241  color235               # no security

# Enhanced status bar colors with futuristic elements
color status color183 color53 "NeoMutt: [^]]+]"                   # NeoMutt title in bright purple
color status color146 color53 "\\([^)]+\\)"                      # parenthetical info in light purple
color status color135 color53 "New:[0-9]+"                       # new message count in neon purple
color status color99  color53 "Flag:[0-9]+"                      # flagged count in cyber purple

# Additional futuristic enhancements for better visual hierarchy
color index         bold  color135  color234        "~b \"AI|artificial intelligence|machine learning|neural|algorithm\"" # AI-related emails
color index         bold  color99   color234        "~b \"crypto|blockchain|bitcoin|ethereum|NFT\""                      # crypto-related emails
color index         bold  color183  color234        "~b \"urgent|asap|immediate|priority\""                             # urgent emails
color body          bold  color146  color234        "\\b(https?://[^ \\t\\r\\n<>\"]*github[^ \\t\\r\\n<>\"]*)\\b"       # GitHub links
color body          bold  color135  color234        "\\b[0-9a-fA-F]{40}\\b"                                             # Git commit hashes
color body          bold  color99   color234        "\\b[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}\\b" # UUIDs

